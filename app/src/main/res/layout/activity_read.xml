<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChapterPages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/linePageNumber"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_gradient_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linePageNumber"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/textCurrentPageNumber"
            android:textColor="@color/color_white"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:id="@+id/imageShareIcon"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="@color/color_white"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"/>
    <ImageView
            android:id="@+id/imageDownloadIcon"
            android:src="@drawable/ic_file_download_black_24dp"
            android:tint="@color/color_white"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"/>
    <TextView
            android:id="@+id/textDownloadUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toEndOf="@id/imageDownloadIcon"
            app:layout_constraintBottom_toBottomOf="@id/imageDownloadIcon"
            app:layout_constraintTop_toTopOf="@id/imageDownloadIcon"
    />
    <com.sun.mangareader01.utils.TouchImageView
            android:id="@+id/imageZoom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:background="@color/black_overlay"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
