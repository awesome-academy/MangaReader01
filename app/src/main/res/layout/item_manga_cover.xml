<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_2">
    <ImageView
            android:id="@+id/imageMangaItemCover"
            tools:src="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="5:7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription,UnusedAttribute"/>
    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_gradient_foreground"
            app:layout_constraintStart_toStartOf="@id/imageMangaItemCover"
            app:layout_constraintEnd_toEndOf="@id/imageMangaItemCover"
            app:layout_constraintTop_toTopOf="@id/imageMangaItemCover"
            app:layout_constraintBottom_toBottomOf="@id/imageMangaItemCover"/>
    <TextView
            android:id="@+id/textMangaItemTitle"
            tools:text="@string/app_name"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="@id/imageMangaItemCover"
            app:layout_constraintEnd_toEndOf="@id/imageMangaItemCover"
            app:layout_constraintBottom_toBottomOf="@id/imageMangaItemCover"/>
</androidx.constraintlayout.widget.ConstraintLayout>
